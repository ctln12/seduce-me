<% if current_user.games.find_by(story: @story).score == 0 %>
  <i class="fas fa-heart"></i>
  <i class="far fa-heart"></i>
  <i class="far fa-heart"></i>
<% elsif current_user.games.find_by(story: @story).score == 1 %>
  <i class="fas fa-heart"></i>
  <i class="fas fa-heart"></i>
  <i class="far fa-heart"></i>
<% elsif current_user.games.find_by(story: @story).score == 2 %>
  <i class="fas fa-heart"></i>
  <i class="fas fa-heart"></i>
  <i class="fas fa-heart"></i>
<% end %>
