<div class="main-container">
  <h1>Les meilleurs sÃ©ducteurs</h1>

  <% counter = 0 %>
  users_sorted = @users.all.sort_by { |user| user.ranking }
  <% users_sorted.each do |user| %>

    <div class="rankings">
      <p><%= counter += 1 %></p>
      <%= image_tag("#{user.avatar}", class: "avatar") %>
      <p><%= user.name %></p>
      <p><%= user.ranking.nil? ? 0 : user.ranking.round(2) * 100 %> %</p>
    </div>

  <% end %>
</div>
