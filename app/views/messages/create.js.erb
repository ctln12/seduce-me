
function refreshForm(innerHTML) {
  const newMessageForm = document.getElementById('message_content');
  newMessageForm.innerHTML = innerHTML;
  newMessageForm.blur();
}

function addMessage(messageHTML) {
  const messagesContainer = document.querySelector('.messages');
  messagesContainer.insertAdjacentHTML('beforeend', messageHTML);
}



<% if @message.errors.any? %>
  console.log("hello");
  // handle error messages later
<% else %>
  console.log("goodbye");
  addMessage('<%= j render "message", message: @message %>')
  refreshForm('<%= j render "form", chat: @chat, message: @message %>');
<% end %>
